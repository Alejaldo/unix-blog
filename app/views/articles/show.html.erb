<h1><%= @article.title %></h1>

<p><%= @article.text %></p>
<br />
<br />
<h2>Comments</h2>
<p>
  <% @article.comments.each do |como| %>
  <p><i><%= como.author %> said at <%= como.created_at %></i>
  <br />
  <%= como.body %>
  </p>
  <hr />
  <% end %>  
</p>
<br />
<br />
<h2>Add comment</h2>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>  
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</p>