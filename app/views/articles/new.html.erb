<h1><%= t('articles.new') %></h1>

<%= form_for :article, url: articles_path do |f| %>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title, class: "form-control", placeholder: "Text input", style: "width: 400px" %>
    </p>
    <p>
        <%= f.label :text %><br />
        <%= f.text_area :text, class: "form-control", rows: "6", style: "width: 400px" %>
    </p>
    <p>
        <%= f.submit t('articles.submit_button'), class: "btn btn-success" %>
    </p>
<% end %>